@page
@model Zealand_Lokale_Booking_UI.Pages.BookingModel

<div class="container-fluid mt-4">
    <div class="row">
        <!-- SIDENAV -->
        <div class="col-12 col-md-3 sidenav bg-white p-3 rounded shadow-sm">
            <form method="post">
                <h5 class="fw-bold mb-3">Filtre</h5>

                @* <!-- Department -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Afdeling:</label>
                    <select asp-for="SelectedDepartment" class="form-control" id="DepartmentSelect">
                        <option value="">Vælg</option>
                        @foreach (var dept in Model.Departments)
                        {
                            <option value="@dept">@dept</option>
                        }
                    </select>
                </div> *@

                <!-- Departments -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Afdeling:</label>

                    <details class="form-control p-2" style="cursor:pointer;">
                        <summary>Vælg</summary>

                        @foreach (var dept in Model.Departments)
                        {
                            <label class="d-block ms-3 mt-2">
                                <input type="checkbox" name="SelectedDepartments" value="@dept" />
                                @dept
                            </label>
                        }
                    </details>
                </div>

                @*   <!-- Building -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Bygning:</label>
                    <select asp-for="SelectedBuilding" class="form-control" id="BuildingSelect">
                        <option value="">Vælg</option>
                        @foreach (var building in Model.Buildings)
                        {
                            <option value="@building">@building</option>
                        }
                    </select>
                </div>

                <!-- Floor -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Etage:</label>
                    <select asp-for="SelectedFloor" class="form-control" id="FloorSelect">
                        <option value="">Vælg</option>
                        @foreach (var floor in Model.Floors)
                        {
                            <option value="@floor">@floor</option>
                        }
                    </select>
                </div>

                <!-- Type -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Type:</label>
                    <select asp-for="SelectedType" class="form-control" id="TypeSelect">
                        <option value="">Vælg</option>
                        @foreach (var type in Model.Types)
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                </div> *@

                <!-- Date -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Dato:</label>
                    <input asp-for="Date" class="form-control" type="date" />
                </div>

                @* <!-- Time -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Tid:</label>
                    <select asp-for="SelectedTime" class="form-control" id="TimeSelect">
                        <option value="">Vælg</option>
                        @foreach (var time in Model.Times)
                        {
                            <option value="@time">@time</option>
                        }
                    </select>
                </div> *@

                <button type="submit" class="btn btn-dark w-100 mt-2">
                    Filtrer
                </button>
            </form>
        </div>

        <!-- TABEL -->
        <div class="col-12 col-md-9 mt-4 mt-md-0">
            <div class="table-responsive shadow-sm rounded">
                <table class="table table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Lokale</th>
                            <th>Afdelin</th>
                            <th>Bygning</th>
                            <th>Etage</th>
                            <th>Type</th>
                            <th>Tid</th>
                            <th>Book</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model.AvailableBookings)
                        {
                            <tr>
                                <td>@b.RoomName</td>
                                <td>@b.DepartmentName</td>
                                <td>@b.BuildingName</td>
                                <td>@b.Level</td>
                                <td>@b.RoomType</td>
                                <td>@b.StartTime.ToString(@"hh")-@b.StartTime.Add(TimeSpan.FromHours(2)).ToString(@"hh")
                                </td>
                                <td>
                                <td>
                                    <form method="post" asp-page-handler="PrepareBooking">
                                        <input type="hidden" name="roomId" value="@b.RoomID" />
                                        <button type="submit" class="btn btn-primary btn-sm w-100">
                                            Book
                                        </button>
                                    </form>
                                </td>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (Model.ShowPopup)
{
    <div class="modal-backdrop show"></div>

    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Bekræft booking</h5>
                </div>

                <form method="post" asp-page-handler="Book">
                    <div class="modal-body">
                        <input type="hidden" name="bookingId" value="@Model.TempBookingRoomID" />

                        <p><strong>Lokale:</strong> @Model.TempRoomName</p>
                        <p><strong>Afdeling:</strong> @Model.TempDepartmentName</p>
                        <p><strong>Bygning:</strong> @Model.TempBuildingName</p>
                        <p><strong>Dato:</strong> @Model.TempBookingDate?.ToString("yyyy-MM-dd")</p>
                        <p><strong>Tid:</strong> @Model.TempBookingTime</p>
                    </div>

                    <div class="modal-footer">
                        <a asp-page="./Booking" class="btn btn-secondary">Annullér</a>
                        <button type="submit" class="btn btn-primary">Bekræft booking</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
}