@page
@model Zealand_Lokale_Booking_UI.Pages.MyBookingsModel
@{
    ViewData["ShowBookingLinks"] = true;    
}

<div class="container-fluid mt-4">
    <div class="row">

        <!-- TABEL -->
        <div class="col-12 col-md-9 mt-4 mt-md-0 align-middle">
            <div class="table-responsive shadow-sm rounded align-middle">
                <table class="table table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Lokale</th>
                            <th>Afdeling</th>
                            <th>Bygning</th>
                            <th>Etage</th>
                            <th>Type</th>
                            <th>Tid</th>
                            <th>Slet</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model.MyBookings.Where(b => b.IsBooked))
                        {
                            <tr>
                                <td>@b.RoomName</td>
                                <td>@b.DepartmentName</td>
                                <td>@b.BuildingName</td>
                                <td>@b.Level</td>
                                <td>@b.RoomType</td>
                                <td>
                                    @b.Date.ToString("yyyy-MM-dd")
                                    @b.StartTime.ToString(@"hh\:mm")-
                                    @b.StartTime.Add(TimeSpan.FromHours(2)).ToString(@"hh\:mm")
                                </td>
                                <td>
                                    <!-- Delete button, TODO: Add handler for delete -->
                                    <form method="post" asp-page-handler="Delete">
                                        <input type="hidden" name="bookingId" value="@b.BookingID" />
                                        <button type="submit" class="btn btn-danger btn-sm w-100">
                                            Slet
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
