@page
@model LoginPageModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div>
        <label>Email:</label>
        <input asp-for="LoginEmail" />
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="LoginPassword" type="password" />
    </div>
    <button type="submit">Login</button>

    <p style="color:red">@Model.ErrorMessage</p>
</form>
