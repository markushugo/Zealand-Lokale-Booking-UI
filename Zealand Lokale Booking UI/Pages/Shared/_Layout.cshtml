<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zealand</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Zealand_Lokale_Booking_UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-light navbar-expand" aria-label="Sidenavigation">
            <div class="container-fluid">
                <!-- Logo -->
                <a href="/" class="navbar-brand d-none d-md-flex align-items-center m-0 me-4 p-0">
                    <img src="https://moodle.zealand.dk/pluginfile.php/1/core_admin/logocompact/300x300/1763629706/Zealand%20Logo%20-%20Moodle.png"
                         class="logo me-1" alt="Zealand" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Left navigation -->
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Intranet</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Mine rum</a>
                        </li>
                        @if ((bool?)ViewData["ShowBookingLinks"] == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/MyBookings">Mine bookings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Booking">Book lokale</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/ManageBookings">Manage Bookings</a>

                            </li>
                        }
                    </ul>
                </div>
                <!--right side avigation -->
                <!-- Right-Side Dropdown Menu -->
                <div class="dropdown ms-auto">
                    <button class="btn dropdown-toggle" type="button" id="rightMenuDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false">
                        Menu
                    </button>

                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="rightMenuDropdown">
                        <li><a class="dropdown-item" href="#">Profil</a></li>
                        <li><a class="dropdown-item" href="#">Zealand UMS</a></li>
                        <li><a class="dropdown-item" href="#">Skema</a></li>
                        <li><a class="dropdown-item" href="#">Wiseflow</a></li>
                        <li><a class="dropdown-item" href="#">Office365</a></li>
                        <li><a class="dropdown-item" href="#">Zoom</a></li>
                        <li><a class="dropdown-item" href="Booking">Book lokale</a></li>

                        <li><hr class="dropdown-divider"></li>

                        <li><a class="dropdown-item" href="#">Indstillinger</a></li>

                        <li><hr class="dropdown-divider"></li>

                        <li><a class="dropdown-item" href="#">Log ud</a></li>
                    </ul>
                </div>


                <div id="usernavigation" class="navbar-nav ms-auto">
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>